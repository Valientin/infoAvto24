.advantage
	padding 60px 0px
	background-color grayColor

.common-text
	text-align center
	margin-bottom 80px
	
	&__title
		display inline-block
		font-family titleFont
		font-size rem(36)
		text-transform uppercase
		margin-bottom 20px
		
		&::after
			content ""
			display block
			width 20%
			height 2px
			background-color lightOrangeColor
			margin 15px auto 0 auto
			
	&__description
		display block
		font-size rem(14)
		color darkGrayColor
		font-weight 400

.advantage-items
	display flex
	justify-content space-between
	text-align center

.advantage-item
	max-width 380px
	width 100%
	display flex
	flex-direction column
	align-items center
	justify-content space-between
	
	&__img
		display flex
		justify-content center
		align-items center
		size(70px)
		border 2px solid lightOrangeColor
		border-radius 50%
		margin-bottom 15px
		
		.icon
			size(35px)
			fill lightOrangeColor
			
	&__title
		font-family boldFont 
		display block
		font-size rem(20)
		font-weight 700
		max-width 280px
		margin-bottom 20px
		width 100%
		
	&__description
		color darkGrayColor
		font-size rem(16)
		max-width 350px	
		width 100%
		line-height 20px