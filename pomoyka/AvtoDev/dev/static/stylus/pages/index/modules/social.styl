.social
	border-bottom 2px solid rgba(0, 0, 0, 0.2)
	
	.container
		display flex
		justify-content space-between
		align-items center
		padding 20px 0

.social-text
	max-width 375px	
	width 100%
	
	&__title
		display block
		font-size rem(20)
		font-weight 700
		margin-bottom 10px
	
	&__description
		font-size rem(14)
		line-height 20px
		font-weight 400
		color darkGrayColor

.social-nav
	margin-right 40px
	
	&__list
		display flex
		align-items center
	&__item
		margin-right 40px
		
		&:last-child
			margin-right 0
			
	&__link
		display block
		
		.icon
			fill #ccc
			size(40px)
			transition .2s ease-in-out
			
			&:hover
				fill orangeColor