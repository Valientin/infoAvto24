footer
	background-color black
	padding 20px 0 12px 0
	flex 0 0 auto
	color white
	
	.container
		display flex
		justify-content space-around
		align-items flex-end
		
	.social-nav
		margin auto
		margin-bottom 10px
		
		&__item
			margin-right 20px
			
		&__link
			
			.icon
				size(30px)
			
			&--vk
				
				.icon
					size(40px)
			

.footer-left
	max-width 350px
	width 100%
	display flex
	flex-direction column
	align-items flex-start

.logo
	
	&__text
		text-transform uppercase
		font-size rem(36)
		margin-bottom 20px
		color white
		font-weight 700
		
.footer-text
	font-size rem(18)
	margin-bottom 15px
	text-transform uppercase
	font-family semiboldFont
	color lightGrayColor
	
.footer-contact
	display flex
	align-items center
	
	.icon
		fill lightGrayColor
		size(17px)
		margin-right 5px
		
	&__mail
		font-size rem(14)
		color lightGrayColor
		

.footer-right
	max-width 600px
	width 100%

.footer-description
	display block
	color lightGrayColor
	font-size rem(14)
	margin-bottom 10px

.all-right
	font-size rem(12)
	color lightGrayColor