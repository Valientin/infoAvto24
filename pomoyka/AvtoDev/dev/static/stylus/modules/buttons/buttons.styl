.info-button
	padding 10px 30px
	background none
	border 3px solid white
	color white
	cursor pointer
	transition .3s ease-in-out
	&:hover
		background orangeColor


.advice-button
	width 100%
	border none
	background-color lightOrangeColor
	color white
	cursor pointer
	padding 15px
	text-align center
	transition .3s ease-in-out
	border-bottom-left-radius 5px
	border-bottom-right-radius 5px
	
	&:hover
		background-color orangeColor


.main-button
	background-color orangeColor
	font-family semiboldFont
	box-shadow 0px 1px 7px -1px black
	padding 15px 30px
	border none
	border-radius 5px
	color white
	cursor pointer